{
  "name": "Nintex Translator",
  "version": "1.0",
  "description": "Nintex Translator Extension",
  "permissions": [
    "storage",   
    "activeTab",
    "alarms",
    "webRequest"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "manifest_version": 2
}